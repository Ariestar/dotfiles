{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "path",
          "style": "powerline",
          "powerline_symbol": "\uE0B0",
          "foreground": "#ffffff",
          "background": "#61afef",
          "options": {
            "style": "folder"
          },
          "template": "  {{ .Path }} "
        },
        {
          "type": "git",
          "style": "powerline",
          "powerline_symbol": "\uE0B0",
          "foreground": "#193549",
          "background": "#fffb38",
          "options": {
            "fetch_status": true
          },
          "template": " {{ .HEAD }}{{ if .Working.Changed }}  {{ .Working.String }}{{ end }} "
        },
        {
          "type": "status",
          "style": "diamond",
          "foreground": "#ffffff",
          "background": "#3A3F4B",
          "background_templates": [
            "{{ if .Error }}#f44747{{ end }}"
          ],
          "leading_diamond": "",
          "trailing_diamond": "\uE0B0",
          "options": {
            "always_enabled": true
          },
          "template": " {{ if .Error }}✘{{ else }}✔{{ end }} "
        }
      ]
    }
  ],
  "final_space": true
}