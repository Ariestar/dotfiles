{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        { "type": "text", "style": "plain", "foreground": "#ffffff", "template": "╭─" },
        {
          "type": "session",
          "style": "plain",
          "foreground": "#a6e22e",
          "foreground_templates": [
            "{{ if .SSHSession }}#ae81ff{{ end }}"
          ],
          "template": "{{ .UserName }}@{{ .HostName }} "
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "#66d9ef",
          "options": { "style": "folder" },
          "template": "in <#f92672><b>{{ .Path }}</b></> "
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "#98c379",
          "options": {
            "fetch_status": true
          },
          "template": "on <#e6db74> {{ .HEAD }}</>{{ if .Working.Changed }} <#f92672>Δ{{ .Working.String }}</>{{ end }}{{ if .Staging.Changed }} <#a6e22e>+{{ .Staging.String }}</>{{ end }} "
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "executiontime",
          "style": "plain",
          "foreground": "#fce94f",
          "options": { "threshold": 500 },
          "template": "{{ if .FormattedMs }}󱎫 {{ .FormattedMs }} {{ end }}"
        },
        {
          "type": "sysinfo",
          "style": "plain",
          "foreground": "#83769c",
          "template": "{{ if .Load1Min }}󰻠 {{ .Load1Min }} {{ end }}"
        },
        {
          "type": "time",
          "style": "plain",
          "foreground": "#75715e",
          "template": "{{ .CurrentDate | date \"15:04:05\" }}"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "status",
          "style": "plain",
          "foreground": "#ffffff",
          "foreground_templates": [ "{{ if .Error }}#f92672{{ end }}" ],
          "options": { "always_enabled": true },
          "template": "╰─{{ if .Error }}✘ {{ .Code }}{{ else }}○{{ end }} ❯ "
        }
      ]
    }
  ],
  "final_space": true
}